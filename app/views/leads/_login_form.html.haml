%h2 Log into an existing group
%p
  Please enter the group's name and your password below.
  #login-lead-errors.notice
= form_tag login_lead_path, remote: true do
  %table
    %tr
      %td
        = label_tag :groupname
      %td
        = text_field_tag :groupname, '', maxlength: 20, required: true, size: 20
    %tr
      %td
        = label_tag :password
      %td
        = password_field_tag :password, '', maxlength: 20, required: true, size: 20
    %tr
      %td(colspan=2)
        = submit_tag 'Log in', class: 'submit'
